<h1>Total Fire Nation Citizens: <%= @members.count %></h1>

<table>
  <tr>
    <th>Name </th>
    <th>Allies </th>
    <th>Enemies</th>
    <th>Affiliations</th>
  </tr>
<% @members.first(25).each do |member| %>
  <tr>
    <td><%= member.name %></td>
    <td><% if member.has_allies? %>
      <% member.allies.each do |ally| %>
        <%= ally %>
      <% end %>
      <% else %> None <% end %></td>
    <td><% if member.has_enemies?%>
      <% member.enemies.each do |enemy| %>
        <%= enemy %>
      <% end %>
      <% else %>None <% end %>  
     </td>
    <td><%= member.affiliation %></td>
  </tr>
<% end %>
